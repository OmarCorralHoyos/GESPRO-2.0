<%-include('template/cabecera',{tituloweb: 'ALMACEN'}) %>

<div id="contenedor">
    <%- include('template/navbar') %> 

    <div id="tbPro">

        <div class="tb1">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE HERRAMIENTA</th>
                        <th>ESTADO</th>
                        <th>TIPO DE HERRAMIENTA</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach((almacen) => { %>
                        <tr>
                         <td><%- almacen.idherra%></td>
                         <td><%-almacen.nombreherra%></td>
                         <td><%-almacen.estado%></td>
                         <td><%-almacen.tipoherra%></td>
                         <td>
                            <button>EDITAR</button>
                            <button>ELIMINAR</button>
                        </td>
                    <% }) %>
                </tbody>
                
            </table>

        </div>
       
        <div class="formPro">
            <form action="/save" method="post">

                <p>Nombre de la herramienta:</p>
                <input type="text" name="nombre" size="40%" placeholder="nombre completo" required>
                <br>
                <p>Estado de la herramienta:</p>
                <input type="text" name="nombre" size="40%" placeholder="" required>
                <br>
                <p>Tipo de ferramiento:</p>
                <input type="text" name="nombre" size="40%">
                <br>

                <input type="submit" value="Enviar">

            </form>
        </div>
    </div>
    
    
</div>

